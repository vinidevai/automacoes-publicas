      "parameters": {
        "command": "=#!/bin/bash\nread -r _ cpu_user cpu_nice cpu_system cpu_idle cpu_iowait cpu_irq cpu_softirq cpu_steal cpu_guest cpu_guest_nice < <(grep 'cpu ' /proc/stat)\ntotal_cpu_initial=$((cpu_user+cpu_nice+cpu_system+cpu_idle+cpu_iowait+cpu_irq+cpu_softirq+cpu_steal+cpu_guest+cpu_guest_nice))\nidle_cpu_initial=$cpu_idle\n\nsleep 1\n\nread -r _ cpu_user cpu_nice cpu_system cpu_idle cpu_iowait cpu_irq cpu_softirq cpu_steal cpu_guest cpu_guest_nice < <(grep 'cpu ' /proc/stat)\ntotal_cpu_final=$((cpu_user+cpu_nice+cpu_system+cpu_idle+cpu_iowait+cpu_irq+cpu_softirq+cpu_steal+cpu_guest+cpu_guest_nice))\nidle_cpu_final=$cpu_idle\n\ntotal_diff=$((total_cpu_final-total_cpu_initial))\nidle_diff=$((idle_cpu_final-idle_cpu_initial))\ncpu_usage=$(awk \"BEGIN {print 100 * (1 - $idle_diff/$total_diff)}\")\nprintf \"%.2f%%\\n\" $cpu_usage"
      },
